.strct-toolbar
  flex-shrink 0

.strct-toolbar a
  text-decoration none

.strct-toolbar a:hover span
  text-decoration none

.strct-toolbar a,
.strct-toolbar md-icon,
.strct-toolbar .strct-toolbar-subheader,
.strct-toolbar .strct-toolbar-title-label
  color $white-color !important

.strct-toolbar md-toolbar
  min-height 152px

.strct-toolbar-breadcrumb
  white-space nowrap
  margin-top 0
  margin-left 10px
  font-size 1em

.strct-toolbar-breadcrumb a
  text-decoration none

.strct-toolbar-breadcrumb a:hover > span
  text-decoration underline

.strct-toolbar-breadcrumb .strct-toolbar-breadcrumb-title
  font-size 1em

.strct-toolbar-breadcrumb .icon-breadcrumb
  font-size 38px
  margin-top 0
  margin-left 2px

.strct-toolbar-header
  flex-wrap wrap

.strct-toolbar-title
  min-width fit-content
  white-space nowrap
  font-size 2em
  margin-top -14px
  margin-left 23px

.strct-toolbar-title-icons
  margin-left 20px

.strct-toolbar-title-icons md-icon
  font-size 32px
  height 34px
  width 34px
  margin-right 10px

.strct-toolbar-button
  min-width fit-content
  font-size 14px
  margin-top -7px
  margin-bottom 10px
  margin-right 10px

.strct-toolbar-button strct-button-primary
  margin-left 15px

.strct-toolbar-subheader
  margin-left 24px
  margin-top -12px
  margin-bottom 12px

.strct-toolbar-subheader .strctfont
  margin-top 2px
  margin-right 5px

.toolbar-switch
  margin-left 9px
  background-color transparent
  border none
  color $background-color

.toolbar-switch md-icon
  vertical-align inherit
