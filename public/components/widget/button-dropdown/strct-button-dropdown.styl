strct-button-dropdown .md-button.md-accent.md-raised.md-hue-2
  stract-border-radius(5px)
  box-shadow-simple()
  font-size 1.2em
  width auto
  height auto
  padding-left 10px
  padding-right 7px
  margin-right 0
  margin-bottom 10px
  webkit-transform none
  -moz-transform none
  -ms-transform none
  -o-transform none
  transform none

.strct-button-dropdown-separator
  border-left solid 1px $background-color
  margin-left 10px
  margin-right 10px

strct-button-dropdown .strct-button-dropdown-elements
  z-index 1
  left 0
  position absolute
  margin-top -10px
  margin-left 2px
  width 264px
  color $label-info-color

strct-button-dropdown .strct-button-dropdown-elements ul
  list-style none

strct-button-dropdown .strct-button-dropdown-elements ul li
  stract-border-radius(5px)
  background-color white
  display list-item

strct-button-dropdown .strct-button-dropdown-elements ul li:hover .strct-button-click-area
  background $hover-on-list-color

strct-button-dropdown .strct-button-dropdown-elements ul li:last-of-type .strct-button-click-area
  border none

strct-button-dropdown .strct-button-dropdown-elements ul li .strct-button-click-area
  stract-border-radius(5px)
  border-bottom hidden
  display block
  padding 10px
  text-transform uppercase
  text-decoration none
  color $label-info-color
  border-bottom 1px solid $default-border-color
  box-shadow inset 0 1px 0 rgba(255, 255, 255, 1)
  cursor pointer

strct-button-dropdown .strct-button-click-area,
strct-button-dropdown .strct-button-click-area:hover,
strct-button-dropdown .strct-button-click-area:focus
  color $background-color
  text-decoration none
  font-size 21px
  outline none

.strct-button-dropdown i
  display inline
  margin-right 10px

.strct-button-dropdown-icon
  color $background-color
  margin-left -2px
  margin-top -12px
  font-size 32px
  outline none

.strct-button-dropdown[disabled]
  background-color $default-border-color !important
  opacity 0.8

strct-button-dropdown:not(div:disabled) .md-button:hover
  stract-brightness(90%)
