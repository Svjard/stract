.strct-input:not(.desktop-pristine) .strct-input-desktop [ng-message],
.strct-input:not(.desktop-pristine) .strct-input-desktop [ng-show]
  color #D84437

.strct-input .strct-input-desktop [ng-message],
.strct-input .strct-input-desktop [ng-show]
  color #545B64

.strct-input-desktop input
  border none
  box-shadow none
  border-bottom 1px solid #E4E4E4

.strct-input-desktop input:focus
  border-color #399076

.strct-input-desktop input.ng-invalid:focus
  border-color #D84437

.strct-input-desktop input.ng-pristine.ng-untouched.ng-invalid
  border-color #E4E4E4

.strct-input-desktop
  margin-top 5px
  margin-bottom 20px

.strct-input input:focus
  outline none

.strct-input md-input-container,
.strct-input md-input-container label,
.strct-input md-input-container input
  padding-left 0

